alias sr='rake spec'
alias rt='rake test'
alias restart='touch tmp/restart.txt'
alias startpg='sudo su postgres'
alias t="rake test"
alias s="rake spec"
alias format-patch="git format-patch HEAD^1..HEAD"

alias rfind="find . -name *.rb | xargs grep -n"

alias ber="bundle exec rspec"
