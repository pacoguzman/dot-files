[diff]
	tool = /usr/local/bin/mine
[difftool "idea"]
  cmd = /usr/local/bin/mine diff (cd (dirname "$LOCAL"); and pwd)/(basename "$LOCAL") (cd (dirname "$REMOTE"); and pwd)/(basename "$REMOTE")
[core]
	excludesfile = ~/.gitignore_global
  whitespace = fix
  quotepath = false
  autocrlf = input
  pager = diff-so-fancy | less --tabs=4 -RFX
[push]
  default = simple
[help]
  autocorrect = 1
[pager]
  color = true
[status]
  color = auto
[rerere]
  enabled = true
[filter "lfs"]
  required = true
  clean = git-lfs clean -- %f
  smudge = git-lfs smudge -- %f
  process = git-lfs filter-process
[pull]
	ff = only
[difftool "sourcetree"]
	cmd = opendiff \"$LOCAL\" \"$REMOTE\"
	path =
[mergetool "sourcetree"]
	cmd = /Applications/Sourcetree.app/Contents/Resources/opendiff-w.sh \"$LOCAL\" \"$REMOTE\" -ancestor \"$BASE\" -merge \"$MERGED\"
	trustExitCode = true
[init]
	defaultBranch = main
